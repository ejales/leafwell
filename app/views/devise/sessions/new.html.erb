<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { 'data-turbo': false }) do |f| %>
  <div class="card-body login-card-body">
    <p class="login-box-msg">Sign in to start your session</p>
    <%= f.input :email, as: :username, required: true, label: false, wrapper_html: { class: 'input-group mb-3'} do %>
      <%= f.input_field :username, class: "form-control", placeholder: 'Username' %>
      <div class="input-group-append">
        <div class="input-group-text">
          <span class="fas fa-user"></span>
        </div>
      </div>
    <% end %>
    <%= f.input :password, as: :password, required: true, label: false, wrapper_html: { class: 'input-group mb-3'} do %>
      <%= f.input_field :password, class: "form-control", placeholder: 'Password' %>
      <div class="input-group-append">
        <div class="input-group-text">
          <span class="fas fa-lock"></span>
        </div>
      </div>
    <% end %>

    <div class="form-group">
      <div class="custom-control custom-switch custom-switch-on-success">
        <%= f.check_box :remember_me, class: 'custom-control-input' %>
        <%= f.label :remember_me, class: 'custom-control-label' do %>
          Remember me
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer">
    <div class="form-actions">
      <%= button_tag class: 'float-right btn btn-success' do %>
        Sign in
        <i class="fas fa-angle-double-right"></i>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
